{
  "safety_datasets": {
    "ppe-detection": {
      "name": "gti-upm/ppe-detection-dataset",
      "description": "Comprehensive PPE detection dataset with helmet, vest, gloves, and boots annotations",
      "type": "object_detection",
      "format": "yolo",
      "classes": ["helmet", "vest", "gloves", "boots"],
      "num_images": 5000,
      "tags": ["ppe", "safety", "industrial", "detection"]
    },
    "safety-equipment": {
      "name": "andrewmvd/safety-equipment-detection",
      "description": "Safety equipment detection dataset for industrial environments",
      "type": "object_detection",
      "format": "yolo",
      "classes": ["hard_hat", "safety_vest", "safety_glasses", "ear_protection"],
      "num_images": 3000,
      "tags": ["safety", "equipment", "industrial", "detection"]
    },
    "industrial-hazards": {
      "name": "mohamedhanytawfeek/industrial-hazards-dataset",
      "description": "Industrial hazard classification dataset for safety monitoring",
      "type": "classification",
      "format": "tensorflow",
      "classes": ["safe", "hazard", "warning", "emergency"],
      "num_images": 2000,
      "tags": ["hazard", "industrial", "safety", "classification"]
    },
    "person-detection": {
      "name": "crowdai/crowdai-human-detection-challenge",
      "description": "Person detection dataset for safety monitoring and zone intrusion",
      "type": "object_detection",
      "format": "yolo",
      "classes": ["person"],
      "num_images": 8000,
      "tags": ["person", "detection", "safety", "monitoring"]
    },
    "construction-safety": {
      "name": "andrewmvd/construction-site-safety",
      "description": "Construction site safety monitoring dataset",
      "type": "object_detection",
      "format": "yolo",
      "classes": ["worker", "helmet", "vest", "machinery", "danger_zone"],
      "num_images": 4000,
      "tags": ["construction", "safety", "industrial", "detection"]
    },
    "manufacturing-safety": {
      "name": "industrial-safety/manufacturing-safety-dataset",
      "description": "Manufacturing environment safety monitoring dataset",
      "type": "object_detection",
      "format": "yolo",
      "classes": ["worker", "machine", "hazard", "safe_zone"],
      "num_images": 3500,
      "tags": ["manufacturing", "safety", "industrial", "detection"]
    },
    "ppe-violation": {
      "name": "safety-ai/ppe-violation-detection",
      "description": "PPE violation detection dataset for safety compliance",
      "type": "classification",
      "format": "tensorflow",
      "classes": ["compliant", "non_compliant", "partial_compliance"],
      "num_images": 2500,
      "tags": ["ppe", "violation", "compliance", "safety"]
    },
    "zone-intrusion": {
      "name": "safety-monitoring/zone-intrusion-detection",
      "description": "Zone intrusion detection dataset for restricted areas",
      "type": "object_detection",
      "format": "yolo",
      "classes": ["person", "restricted_zone", "safe_zone", "warning_zone"],
      "num_images": 3000,
      "tags": ["zone", "intrusion", "safety", "monitoring"]
    }
  },
  "training_configurations": {
    "yolo": {
      "base_model": "yolov8n.pt",
      "epochs": 100,
      "batch_size": 16,
      "image_size": 640,
      "learning_rate": 0.01,
      "patience": 20,
      "augmentation": true,
      "pretrained": true
    },
    "tensorflow": {
      "base_model": "resnet50",
      "epochs": 50,
      "batch_size": 32,
      "image_size": 224,
      "learning_rate": 0.001,
      "validation_split": 0.2,
      "augmentation": true,
      "pretrained": true
    },
    "pytorch": {
      "base_model": "resnet18",
      "epochs": 75,
      "batch_size": 64,
      "image_size": 224,
      "learning_rate": 0.001,
      "validation_split": 0.2,
      "augmentation": true,
      "pretrained": true
    }
  },
  "model_requirements": {
    "ppe_detection": {
      "minimum_accuracy": 0.85,
      "minimum_precision": 0.80,
      "minimum_recall": 0.85,
      "target_fps": 30,
      "supported_formats": ["jpg", "jpeg", "png", "mp4", "avi"]
    },
    "hazard_detection": {
      "minimum_accuracy": 0.90,
      "minimum_precision": 0.85,
      "minimum_recall": 0.90,
      "target_fps": 25,
      "supported_formats": ["jpg", "jpeg", "png", "mp4", "avi"]
    },
    "person_detection": {
      "minimum_accuracy": 0.95,
      "minimum_precision": 0.90,
      "minimum_recall": 0.95,
      "target_fps": 30,
      "supported_formats": ["jpg", "jpeg", "png", "mp4", "avi"]
    }
  },
  "deployment_configurations": {
    "edge_device": {
      "model_size": "< 50MB",
      "inference_time": "< 100ms",
      "memory_usage": "< 2GB",
      "cpu_cores": "2+",
      "gpu": "optional"
    },
    "server": {
      "model_size": "< 200MB",
      "inference_time": "< 50ms",
      "memory_usage": "< 8GB",
      "cpu_cores": "4+",
      "gpu": "recommended"
    },
    "cloud": {
      "model_size": "< 500MB",
      "inference_time": "< 25ms",
      "memory_usage": "< 16GB",
      "cpu_cores": "8+",
      "gpu": "required"
    }
  },
  "safety_standards": {
    "iso_45001": {
      "compliance": true,
      "requirements": [
        "hazard_identification",
        "risk_assessment",
        "control_measures",
        "emergency_response"
      ]
    },
    "osha_standards": {
      "compliance": true,
      "requirements": [
        "ppe_requirements",
        "machine_guarding",
        "lockout_tagout",
        "confined_spaces"
      ]
    },
    "ansi_standards": {
      "compliance": true,
      "requirements": [
        "safety_colors",
        "safety_signs",
        "machine_safety",
        "personal_protection"
      ]
    }
  }
} 